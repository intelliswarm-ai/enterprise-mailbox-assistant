<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="010-add-auto-replied-columns" author="claude-code">
        <comment>Add auto_replied and auto_replied_at columns to track emails that have been replied to via auto-respond</comment>

        <addColumn tableName="emails">
            <column name="auto_replied" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="emails">
            <column name="auto_replied_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
