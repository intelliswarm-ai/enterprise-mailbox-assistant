<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="009-add-tone-recommendation-columns" author="claude-code">
        <comment>Add recommended_tone and tone_reasoning columns to emails table for auto-respond feature</comment>

        <addColumn tableName="emails">
            <column name="recommended_tone" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="emails">
            <column name="tone_reasoning" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
